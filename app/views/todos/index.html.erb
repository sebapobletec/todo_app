<table>
  <tr>
    <th><h2> Todo </h2></th>
  <tr>

    <% @todos.each do |todo| %>
  <tr class="well list-index">
    <td > <%= todo.description %> </td>
    <td class="btn btn-default"> <%= link_to 'Show', todo_path(todo.id) %> </td>
    <td class="btn btn-default"> <%= link_to 'Edit', todo_edit_path(todo.id) %> </td>
    <td class="btn btn-danger"> <%= link_to 'Destroy', todo, method: :delete %> </td>
    <td class="btn btn-success"> <%= link_to 'Complete', todo_complete_path(todo.id) %> </td>
  </tr>
  <% end %>
</table>

<br>
<%= link_to 'New Todo', todos_new_path %>
