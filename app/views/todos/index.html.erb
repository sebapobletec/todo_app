<table style="width:50%">
  <tr>
    <th>Todo </th>
    <th>Actions</th>
  <tr>

<% @todos.each do |todo| %>
  <tr>
    <td> <%= todo.description %> </td>
    <td> <%= link_to 'Show', todo_path(todo.id) %> </td>
    <td> <%= link_to 'Edit', todo_edit_path(todo.id) %> </td>
  </tr>
<% end %>
</table>
